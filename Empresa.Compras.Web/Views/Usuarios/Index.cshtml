@model IEnumerable<Empresa.Compras.Entities.Usuario>

@{
    ViewBag.Title = "Lista Usuários";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="divExcluir"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>Compras - Usuários</h4>
    </div>
    <div class="panel-body">
        @Html.ActionLink("Novo Usuario", "Create", "Usuarios", new { @class = "btn btn-primary" })

        <table class="table table-striped table-condensed table-bordered marginTop">
            <thead>
                <tr>
                    @*<th class="text-right">#id</th>*@
                    <th class="text-center">Nome</th>
                    <th class="text-center">Cpf</th>
                    <th class="text-center">Perfil</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>

            <tbody>

            @foreach (var item in Model)
            {
                <tr id="row-@item.IdUsuario">
                    <td>
                        @Html.ActionLink(item.Nome, "Edit", new { item.IdUsuario })
                    </td>

                    <td class="text-left">
                        @item.Nome
                    </td>

                    <td class="text-center">
                        @item.Cpf
                    </td>

                    <td class="text-center">
                        @item.Perfil
                    </td>


                    <td class="text-center">
                        <input type="submit" class="btn btn-danger btn-xs" id="@item.IdUsuario" name="@item.Nome" value="Excluir" />
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("Confirmacao")
