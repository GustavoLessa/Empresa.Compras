@model IEnumerable<Empresa.Compras.Entities.Categoria>

    @{
        ViewBag.Title = "Lista Categorias";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div id="divExcluir"></div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>Compras - Categorias de Propostas</h4>
        </div>
        <div class="panel-body">
            @Html.ActionLink("Nova categoria", "Create", "Categorias", new { @class = "btn btn-primary" })

            <table class="table table-striped table-condensed table-bordered marginTop">
                <thead>
                    <tr>
                        @*<th class="text-right">#id</th>*@
                    <th class="text-center">Nome</th>
                    <th class="text-center">Descrição</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
            {
                    <tr id="row-@item.IdCategoria">
                        @*<td class="text-right">
                                # @item.IdDespesaCategoriaGrupo
                            </td>*@

                        <td>
                            @Html.ActionLink(item.Nome, "Edit", new { item.IdCategoria })
                        </td>

                        <td class="text-left">
                            @item.Descricao
                        </td>

                        <td class="text-center">
                            <input type="submit" class="btn btn-danger btn-xs" id="@item.IdCategoria" name="@item.Nome" value="Excluir" />
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("Confirmacao")